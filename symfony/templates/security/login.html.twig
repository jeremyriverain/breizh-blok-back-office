{% extends '@EasyAdmin/page/login.html.twig' %}

{% block page_title %}
	Se connecter
{% endblock page_title %}

{% block wrapper_wrapper %}
	<div class="container">
		<form action="{{ path('login') }}" method="POST" class="offset-md-4 col-md-4">
			{% for label, messages in app.flashes %}
				{% for message in messages %}
					<div class="alert alert-{{label}}" role="alert">
						{{message}}
					</div>
				{% endfor %}
			{% endfor %}
			<div class="form-group">
				<label for="email">{{ 'Email' | trans }}:</label>
				<input type="email" name="email" class="form-control" id="email" placeholder="name@example.com">
			</div>
			<button type="submit" class="btn btn-primary">{{ 'send_link'|trans({},'login') }}</button>
		</form>
	</div>
{% endblock %}
